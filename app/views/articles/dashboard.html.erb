<% user = User.find(session[:user_id]) %>
<h2 class="text-4xl mb-10 font-extralight text-lime-700 mt-12 px-5">Hey <%= user.name %>,</h2>
<div class="mt-20 flex flex-col items-center">
  <h2 class="text-4xl font-thin mb-8 text-lime-700 px-5">Your Articles</h2>
  <ul class="flex gap-10 flex-wrap justify-center w-8/12">
    <% @user_articles.each do |article| %>
      <div class="w-full">
        <div class="outline outline-offset-1 outline-slate-100 flex flex-col w-full bg-white rounded-md shadow pt-5 px-5">
          <div class="">
            <div class="flex gap-1 font-bold">
              <li class="card-title text-2xl"><%= article.title %></li>
            </div>
            <li class="mt-3 font-extralight flex gap-1">by 
              <p class="text-lime-600"><%= article.author %></p>
            </li>
            <li class="font-light text-xs italic pt-2">Authored <%= article.date %></li>
            <div class="mt-5 pb-5">
              <%= link_to article do %>
                <button class="btn btn-outline btn-sm btn-neutral w-full">View Article</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
</div>
