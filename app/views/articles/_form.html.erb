<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <%= render partial: "shared/form_errors", locals: { form_model: article } %>
  <% end %>

  <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
    <div class="sm:col-span-4">
      <%= form.label :title, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= form.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-slate-600 sm:text-sm sm:leading-6" %>
      </div>
    </div>

    <div class="sm:col-span-2">
      <%= form.label :date, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= form.date_field :date, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-slate-600 sm:text-sm sm:leading-6" %>
      </div>
    </div>
  </div>

  <div class="mt-2">
    <%= form.label :content, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_area :content, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-slate-600 sm:text-sm sm:leading-6" %>
  </div>

  <div class="mt-2">
    <%= form.label :author, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_field :author, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-slate-600 sm:text-sm sm:leading-6" %>
  </div>

  <div class="mt-4">
    <% if !article.id.nil? && (current_page?(edit_article_path(article)) || current_page?(controller: :articles, action: :update))  %>
      <%= form.submit class: "inline-flex cursor-pointer items-center rounded-md bg-sky-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-sky-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600" %>
      <%= link_to "View Article", article_path(article), class: "ml-3 inline-flex items-center rounded-md bg-slate-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-600" %>
    <% else %>
      <%= form.submit class: "inline-flex cursor-pointer items-center rounded-md bg-emerald-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-600" %>
    <% end %>
    <%= link_to "Cancel", articles_path, class: "ml-3 inline-flex items-center rounded-md bg-slate-100 px-3 py-2 text-sm font-semibold text-slate-500 shadow-sm hover:bg-slate-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-slate-300" %>
  </div>
<% end %>
