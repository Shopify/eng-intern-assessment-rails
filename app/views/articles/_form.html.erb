<%= form_with(model: article, local: true) do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div>
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
  
    <div>
      <%= form.label :author %>
      <%= form.text_field :author %>
    </div>
  
    <div>
      <%= form.label :date %>
      <%= form.date_select :date %>
    </div>
  
    <%= form.submit %>
<% end %>