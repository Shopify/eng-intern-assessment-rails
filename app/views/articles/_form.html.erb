  </div>

  <div class="field form-group">
    <%= form.text_area :content, class:"form-control", placeholder:"Fill with your content" %>
  </div>

  <div class="field form-group">
    <%= form.date_field :date, id: :article_date, class:"form-control", value:Date.today, type: :hidden %>
  </div>

