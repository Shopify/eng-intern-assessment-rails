  <%= form_with model: @article, html: { class: 'article-form' } do |form| %>
    <div class="form-group">
      <%= form.label :title %><br>
      <%= form.text_field :title, class: 'form-control' %>
      <% @article.errors.full_messages_for(:title).each do |message| %>
        <div class="error-message-create"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :content %><br>
      <%= form.text_area :content, class: 'form-control-content' %>
      <% @article.errors.full_messages_for(:content).each do |message| %>
        <div class="error-message-create"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :author %><br>
      <%= form.text_field :author, class: 'form-control' %>
      <% @article.errors.full_messages_for(:author).each do |message| %>
        <div class="error-message-create"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :date %><br>
      <%= form.text_field :date, class: 'form-control' %>
      <% @article.errors.full_messages_for(:date).each do |message| %>
        <div class="error-message-create"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'create-button' %>
    </div>
  <% end %>