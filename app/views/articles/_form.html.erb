<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> found:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
 

  <div class="mb-3">
    <% form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control", placeholder:"Title", required: true %>
  </div>

  <div class="mb-3">
    <% form.label :author, style: "display: block" %>
    <%= form.text_field :author, class:"form-control", placeholder:"Author", required: true %>
  </div>

  <div class="mb-3">
    <% form.label :content, style: "display: block" %>
    <%= form.text_area :content, class:"form-control", placeholder:"Content", rows: "3" %>
  </div>


  <div class="mb-3">
    <% form.label :date, style: "display: block" %>
    <%= form.datetime_field :date, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit %>
  </div>


 </div>
<% end %>
