<%= form_with(model: article, local: true) do |form| %>
    <div class="field">
       <%= form.label :title %>
       <%= form.text_field :title %>
    </div>
   
    <div class="field">
       <%= form.label :content %>
       <%= form.text_area :content %>
    </div>
   
    <div class="field">
       <%= form.label :author %>
       <%= form.text_field :author %>
    </div>
   
    <div class="field">
       <%= form.label :date %>
       <%= form.date_field :date %>
    </div>
   
    <div class="actions">
       <%= form.submit %>
    </div>
   <% end %>