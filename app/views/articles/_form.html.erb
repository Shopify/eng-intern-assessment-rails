<%# UI for Article form (Creation, Update...) %>

<%= form_with(model: article) do |form| %>

<%# Render Errors if title and/or content is empty %>
  <% if article.errors.any? %>
  <div class="bg-red-100 border-l-4 border-orange-500 text-orange-700 p-4 w-7/12 mx-auto" role="alert">
      <p class="text-red-400">
        <h2 class="text-xl text-red-500"><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
        <ul class="list-disc">
          <% article.errors.each do |error| %>
            <li class="text-red-500 ml-6"><%= error.full_message %></li>
          <% end %>
        </ul>
      </p>
    </div>
    <% end %>

  <div class="grid w-3/12 mx-auto">
    <span class="font-semibold mt-2">
      <%= form.label :title %>
    </span>
    <div class="border-2 border-gray-200 rounded-lg">
    <%= form.text_area :title, class: "w-full h-full" %>
    </div>
  </div>

  <div class="grid w-5/12 mx-auto my-auto h-7/12">
    <span class="font-semibold mt-2">
    <%= form.label :content %>
    </span>
    <div class="h-24 md:h-48 border-2 border-gray-200 rounded-lg">
      <%= form.text_area :content, class: "h-24 md:h-48 border-2 border-gray-200 rounded-lg w-full h-full" %>
    </div>
  </div>

  <div class="grid w-2/12 mx-auto my-auto h-7/12">
    <span class="font-semibold mt-2">
    <%= form.label :author %>
    </span>
    <%= form.text_field :author, class: "border-2 border-gray-200 rounded-lg" %>
  </div>

  <div class="grid w-2/12 mx-auto my-auto h-7/12">
    <span class="font-semibold mt-2">
    <%= form.label :date %>
    </span>
    <%= form.datetime_field :date, class: "border-2 border-gray-200 rounded-lg p-2" %>
  </div>

    <div class="hover:shadow-xl mt-2  rounded-2xl text-center hover:bg-blue-300 delay-100 transition delay-150 duration-150 ease-in-out grid w-2/12 mx-auto bg-gray-200" >
    <%= form.submit "Submit" %>
  </div>

  </div>

<% end %>

