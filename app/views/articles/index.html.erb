<h1>Encyclopedia</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<h2>Articles</h2>
<% @articles.each do |article| %>
  <ul>
    <%= link_to article.title, article %>
    <%= article.date %>
    <%= article.author %>
    <%= link_to "Delete", 
        article_path(article), 
        data: {turbo_method: :delete, turbo_confirm: "Woudld you like to delete this article?"} %> 
  </ul>

<% end %>
<p><%= link_to "new", new_article_path %></p>
