<h1>Articles</h1>

<%= form_with url: articles_path, method: :get do |form| %>
  <%= form.label :search, 'Search Articles' %>
  <%= form.text_field :search, value: params[:search] %>
  <%= form.submit 'Search' %>
<% end %>

<%= link_to 'New Article', new_article_path %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %> 
      by <%= article.author %> 
      published on <%= article.date.strftime("%B %d, %Y") %>
    </li>
  <% end %>
</ul>
