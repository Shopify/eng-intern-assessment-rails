<div>
  <h1>All Posts</h1>
  <div class="articles-list">
    <% @articles.each do |article| %>
      <div class="article">
        <p><%= article.title %></p>
        <p>Author: <%= article.author ? article.author : "Anonymous" %></p>
        <p>Date: <%= article.date ? article.date : 'Unknown Time' %></p>
        <p class="content">Content: <%= article.content %></p>
      </div>
    <% end %>
  </div>
</div>