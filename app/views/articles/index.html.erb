<h1>Articles</h1>

<%= form_with url: articles_path, method: :get do |form| %>
	<%= form.label :search, "Search for:" %>
	<%= form.text_field :search%>
	<%= form.submit "Search" %>
<% end %>

<ul>
	<% @articles.each do |article| %>
	<li>
		<strong><%= link_to article.title, article %></strong><br/>
		<%= article.author %> <br/>
		<%= article.content %> <br/>
		<%= article.date%> <br/>
	</li>
	<% end %>
</ul> 
<%= link_to "Add New Article", new_article_path %>