<h1>Articles</h1>

<%= form_tag(articles_path, method: :get, class: "form-style") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search by title or content" %>
  <%= submit_tag "Search" %>
<% end %>

<% @articles.each do |article| %>
  <div class="article">
    <h2><%= link_to article.title, article %></h2>
    <%= format_value(article.author, article.date) %>
  </div>
  <hr class="dashed">
<% end %>

<div class="button">
  <%= link_to "New Article", new_article_path %>
</div>