<h2><%= "\n" %></h2> <!--hack to add padding above search box-->
<%= form_with(url: '/search', method: :get) do |form| %>
  <%= form.label :query, "Search for articles continaing:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<h2>All articles</h2>
<% if @articles%>
<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>
<% end%>