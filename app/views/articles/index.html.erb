<h1>Articles</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :search %><br>
    <%= form.text_field :search %>
  </div>

  <div>
    <%= form.submit ("Search") %>
  </div>
<% end %>


<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>