<h1>Articles</h1>

<%= form_with url: articles_path, method: :get do |form| %>
  <%= form.label :search, "Search for:" %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
<% end %>

<%= link_to "New Article", new_article_path %>

<div class="container">
    <% @articles.each do |article| %>
        <div class = "article"> 
            <%= link_to article.title, article %>
            <p><%= article.author %></p>
            <p><%= article.date.strftime("%-d %B %Y") %></p>
            <p><%= article.content %></p>
        </div>
    <% end %>
</div>