<h1>Articles</h1>

<body>
  <form action="/search">
    <input placeholder="Search" name="search_param" type="text">
    <button type="submit">Search</button>
  </form>
  <%= yield %>
</body>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a New Article", new_article_path %>