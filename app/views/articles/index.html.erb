<h1> Articles </h1>

<%= form_tag(articles_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag("Search") %>
<% end %>


<ul>
    <% @articles.each do |article| %>
        <li>
            <%= link_to article.title, article %> <!-- # shows text and rendrers link with destination using article_path --> 
        </li>
    <% end %>
</ul>

<%= link_to "New Article", new_article_path %>

