<!-- app/views/articles/index.html.erb -->
<h1>Articles</h1>

<div class="search-container">
  <%= form_tag(articles_path, method: "get", class: "search-form") do %>
    <%= text_field_tag :query, params[:query], placeholder: "Search", class: "search-input" %>
    <%= submit_tag "Search", class: "search-button" %>
  <% end %>
</div>

<%= link_to 'Create New Article', new_article_path, class: 'new-article-link' %>

<% @articles.each do |article| %>
    <div class="article-container">
      <h2 class="article-title"><%= link_to article.title, article %></h2>
      <p class="article-content"><%= article.content %></p>
      <p class="article-content">author: <%= article.author %></p>
      <p class="article-content">date: <%= article.date %></p>
    </div>
<% end %>
  