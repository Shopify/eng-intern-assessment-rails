<h1>Articles</h1>

<%= form_with url: search_articles_path, method: :get do |form| %>
  <%= form.text_field :search %>
  <%= form.submit "Search" %>
  <%= link_to "Clear", root_path %>
<% end %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>