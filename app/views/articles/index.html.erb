<h1>Articles</h1>

<ul>
  <%= form_tag root_path, :method => "get" do%>
    <%= label_tag(:query, "search for articles:") %>
    <%= text_field_tag :query, params[:query]%>
    <%= submit_tag("Search")%>
  <% end %>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>
