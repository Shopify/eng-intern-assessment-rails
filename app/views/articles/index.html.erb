<h1>Articles</h1>

<%= link_to 'Add Article', new_article_path %>
<hr>

<%= form_tag(articles_path, method: "get", class: "search-form") do %>
  <%= text_field_tag(:query, params[:query], placeholder: "Search articles...") %>
  <%= submit_tag("Search") %>
<% end %>
<hr>

<ul>
  <% if @articles.present? %>
    <% @articles.each do |article| %>
      <li><%= link_to article.title, article_path(article) %></li>
    <% end %>
  <% else %>
    <li>No articles found</li>
  <% end %>
</ul>
