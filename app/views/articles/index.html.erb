<h1>Encyclopedia</h1>

<%= form_tag "/articles", method: "GET" do %>
    <%= text_field_tag :search, params[:search] %>  <%= submit_tag "Search" %>
<% end %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<%= link_to "Add Entry", new_article_path %>
