<div class="container">
  <h1 class="my-4">Articles</h1>

  <%= form_tag(articles_path, method: :get, class: "form-inline mb-3") do %>
    <div class="input-group">
      <%= text_field_tag :query, params[:query], placeholder: "Search articles...", class: "form-control mr-sm-2", type: "search" %>
      <div class="input-group-append">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% @articles.each do |article| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to article.title, article_path(article) %>
        </h5>
        <%= link_to 'Read More', article_path(article), class: 'btn btn-primary mr-2' %>
        <%= link_to 'Update', edit_article_path(article), class: 'btn btn-info' %>
        <%= link_to "Delete", article_path(article), data: {
            turbo_method: :delete,
            turbo_confirm: "Confirm Deletion?"
        }, class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>

  <%= link_to 'New Article', new_article_path, class: 'btn btn-success' %>
</div>