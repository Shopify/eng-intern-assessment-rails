<h1>Articles</h1>

<%= form_tag "/search", method: "GET" do %>
  <%= label_tag :search %>
  <%= text_field_tag :search, params[:search] %>

  <%= submit_tag "Search" %>
<% end %>


<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>
