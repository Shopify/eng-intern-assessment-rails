<h1 class="shopify-title mb-5">The <span class="shopify-name">Shopify</span> Encyclopedia</h1>

<%= form_with url: articles_path, method: :get, class: "mb-3" do %>
  <%= label_tag :query, "Search Articles", class: "form-label" %>
  <div class="row">
    <%# Search field for article title %>
    <div class="col">
      <%= text_field_tag :query, params[:query], class: "form-control" %>
    </div>
    <%# Search button %>
    <div class="col-auto">
      <%= submit_tag "Search", class: "btn btn-info" %>
    </div>
    <%# Add new article button %>
    <div class="col-auto">
    <%= link_to new_article_path, class: "btn btn-primary" do %>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle plus-icon" viewBox="0 0 16 16">
    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
  </svg>
  Add New
<% end %>

</div>
  </div>
<% end %>

<%# For each article, render its content %>
<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
  <% end %>
</div>