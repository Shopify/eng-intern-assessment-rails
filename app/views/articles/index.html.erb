<p style="color: green"><%= notice %></p>

<h1>Articles</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>title</th>
      <th>author</th>
      <th>date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.author %></td>
      <td><%= article.date %></td>
      <td><%= link_to "Show this Article", article, class:"btn btn-primary btn-sm" %></td>
      <td><%= button_to 'Delete', article, method: :delete, class: "btn btn-danger"%></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to "New article", new_article_path, class: "btn btn-primary btn-sm"%>
