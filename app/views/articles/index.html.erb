<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <%= form_with url: "/articles", method: :get do |form| %>
    <%= form.label :query, "Search for:" %>
    <%= form.text_field :query, value: @query %>
    <%= form.submit "Search" %>
  <% end %>
  <table>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Author</th>
      <th>Modified</th>
      <th>Posting Date</th>
      <th>Link</th>
    </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.author %></td>
      <td><%= article.updated_at %></td>
      <td><%= article.date %></td>
      <td>
        <%= link_to "Show", article %>
      </td>
    </tr>
  <% end %>
  </table>
</div>

<%= link_to "New article", new_article_path %>
