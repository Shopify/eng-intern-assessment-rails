<h1>Encyclopedia</h1>

<%= render "layouts/alert" %>
<br>

<%= render 'search_bar' %>

<ul>
  <% @articles.each do |article|%>
    <li>
      <div>
        <%= link_to article.title, article %>
        <%= article.date %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to 'Create New Article', new_article_path, class: 'button' %> 