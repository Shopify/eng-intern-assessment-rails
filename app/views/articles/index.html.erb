<nav>
  <h1 class="articles-heading">Articles</h1>
  <a class="btn-link-primary" href="/articles/new">New Article</a>
</nav>

<section class="search-section">
  <%= form_with url: "/search", method: :get, local: true do %>
    <% if params[:q].present? %>
      <%= link_to "Reset", articles_path, class: "btn-link-outline" %>
    <% end %>
    <%= text_field_tag :q, params[:q], placeholder: "Search", class: "search" %>
    <%= submit_tag "Search", class: "btn-link-outline" %>
  <% end %>
</section>

<ul class="articles">
  <% if @articles.any? %>
    <% @articles.each do |article| %>
      <li>
        <div class="article-title-info">
          <span class="article-title"><%= link_to article.title, article_path(article) %></span>
          <div class="meta">
            <span class="article-author"><%= article.author %></span>
            <span class="article-date"><%= article.date %></span>
          </div>
        </div>

        <div class="actions">
          <%= link_to "Edit", edit_article_path(article), class: "edit" %>
          <%= link_to "Delete",
          article_path(article),
          method: :delete,
          data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure?",
          },
          class: "delete" %>
        </div>
      </li>
    <% end %>
  <% else %>
    <li>No articles found.</li>
  <% end %>
</ul>

<footer>
  <div class="footer-content">
    <p>Created by
      <a href="https://www.linkedin.com/in/armin-talaie/">Armin Talaie</a></p>
  </div>
</footer>
