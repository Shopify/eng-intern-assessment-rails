<div class="container">
  <h1>Articles</h1>

  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.author if article.author.present? %></td>
        <td><%= article.date.strftime("%d/%m/%Y") if article.date.present? %></td>
        <td class="action-buttons">
          <%= link_to 'Read', article_path(article) %>
          <%= link_to 'Edit', edit_article_path(article) %>
          <%= button_to 'Delete', article_path(article),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Article', new_article_path, class: 'new-article-button' %>
</div>
