<h1>Articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article) %>
      <p><strong>Author:</strong> <%= article.author %></p>
      <p><strong>Date:</strong> <%= article.date %></p>
      <p><strong>Content:</strong> <%= truncate(article.content, length: 200) %></p>
    </li>
  <% end %>
</ul>

<%= link_to 'New Article', new_article_path, class: 'new-article-link' %>
