<h1>All Articles</h1>

<%= form_with url: "/search", method: :get do |form|%>
    <%= form.label :query, "Search:" %>
    <%= form.text_field :query %>
    <%= form.submit "Search" %>
<%end%>

<ul>
    <% @articles.each do |article| %>
        <li>
            <a href="/articles/<%= article.id %>">
                <%= link_to article.title, article %>
            </a>
        </li>
    <% end %>
</ul>

<%= link_to "New Article", new_article_path %>