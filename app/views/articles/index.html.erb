<h1>Articles</h1>

<%= form_tag(articles_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search], placeholder: 'Search articles') %>
    <%= submit_tag('Search') %>
  <% end %>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article %>
    </li>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path %>
