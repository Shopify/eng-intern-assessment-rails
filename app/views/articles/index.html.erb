<!-- Page Title and Search Form -->

<h1>Articles</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<% if @articles.any? %>
  <ul>
    <% @articles.each do |article| %>
      <li>
        <h2><%= article.title %></h2>
        <p><%= article.author %></p>
        <p><%= article.content %></p>
        <p><%= article.date %></p>

        <%= link_to 'Edit', edit_article_path(article), class: 'action-button' %>
        <%= button_to 'Destroy', article, method: :delete, onclick: "return confirm('Are you sure?');", class: 'action-button' %>


        <hr>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No articles found</p>
<% end %>

<%= link_to 'New Article', new_article_path %>
