<h1>Articles</h1>

<% @articles.each do |article| %>
  <h2><%= article.title %></h2>
  <p><%= article.author %></p>
  <p><%= article.content %></p>
  <p><%= article.date %></p>
  <p><%= article.image %></p>
<%= button_to 'Edit', edit_article_path(article), method: :get , class: 'action-button'%>
<%= button_to 'Destroy', article, method: :delete, onclick: "return confirm('Are you sure?');" %>



  <hr>
<% end %>

<%= link_to 'New Article', new_article_path %>
