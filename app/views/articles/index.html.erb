<!-- Header for the articles listing page -->
<h1>Articles</h1>

<!-- Link to create a new article -->
<%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>

<!-- List of articles -->
<ul class="articles-list">
  <!-- Iterating through each article -->
  <% @articles.each do |article| %>
    <li>
      <h2><%= link_to article.title, article_path(article) %></h2>
      <p><%= truncate(article.content, length: 100) %></p>
      <p>By: <%= article.author %> | Published on: <%= article.date %></p>
      <%= link_to 'Edit', edit_article_path(article), class: "btn btn-info" %> |
      <%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </li>
  <% end %>
</ul>
