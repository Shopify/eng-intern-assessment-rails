<h1 style="text-align: center;">Encyclopedia</h1>

<%= form_tag articles_path, method: :get, style: "text-align: center; margin-bottom: 20px;" do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search titles, content, or author", style: "margin-right: 10px; width: 300px;" %>
  <%= submit_tag "Search", name: nil, style: "padding: 5px 10px; background-color: #007bff; color: white; border: none; border-radius: 5px;" %>
<% end %>

<p style="text-align: center; margin-bottom: 20px;">
  <%= link_to 'Create New Article', new_article_path, style: 'padding: 10px 15px; text-decoration: none; background-color: #28a745; color: white; border-radius: 5px;' %>
</p>

<table style="margin-left: auto; margin-right: auto; border-collapse: collapse;">
<thead>
  <tr>
    <th><%= sort_link('Date', 'date') %></th>
    <th><%= sort_link('Author', 'author') %></th>
    <th><%= sort_link('Title', 'title') %></th>
    <th><%= sort_link('Content', 'content') %></th>
    <th>Actions</th>
  </tr>
</thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
      <td style="border: 1px solid black; padding: 8px;"><%= article.date %></td>
      <td style="border: 1px solid black; padding: 8px;"><%= article.author %></td>
      <td style="border: 1px solid black; padding: 8px;"><%= article.title %></td>
      <td style="border: 1px solid black; padding: 8px;"><%= article.content %></td>
        <td style="border: 1px solid black; padding: 8px;">
          <%= link_to "Read more", article_path(article), style: "padding: 5px 10px; text-decoration: none; background-color: #007bff; color: white; border-radius: 5px;" %> |
          <%= link_to "Edit", edit_article_path(article), style: "padding: 5px 10px; text-decoration: none; background-color: #28a745; color: white; border-radius: 5px;" %> |
          <%= button_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, form: { style: "display: inline" }, style: "padding: 5px 10px; background-color: #dc3545; color: white; border: none; border-radius: 5px;" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


