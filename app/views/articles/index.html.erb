<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Date</th>
      <th>Read</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="6"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>       
        <td><%= article.title %></td>
        <td><%= article.author %></td>
        <td><%= article.date %></td>

        <td><%= link_to 'Read', article_path(article), class: 'btn btn-success' %></td>

        <td><%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %></td>

        <td><%= button_to 'Delete', article_path(article), method: :delete, class: 'btn btn-danger' %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>