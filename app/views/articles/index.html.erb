<h1>Articles</h1>

<div class="controls-container">
<%= link_to 'New Article', new_article_path, class: 'new-article-button' %>

  <%= form_with(url: articles_path, method: :get, local: true, class: 'search-form') do %>
    <%= label_tag(:query, "Search for articles:") %>
    <%= text_field_tag(:query, params[:query]) %>
    <%= submit_tag("Search") %>
  <% end %>
</div>

<ul class="articles-list">
  <% @articles.each do |article| %>
    <li class="article-item">
      <%= link_to article.title, article_path(article), class: 'article-link' %>
    </li>
  <% end %>
</ul>