<div class="container">
  <h1 class="my-4">Articles</h1>

  <% @articles.each do |article| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to article.title, article_path(article) %>
        </h5>
        <%= link_to 'Read More', article_path(article), class: 'btn btn-primary mr-2' %>
        <%= link_to 'Update', edit_article_path(article), class: 'btn btn-info' %>
      </div>
    </div>
  <% end %>

  <%= link_to 'New Article', new_article_path, class: 'btn btn-success' %>
</div>