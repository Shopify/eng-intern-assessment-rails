<ul>
  <% @articles.each do |article| %>
    <li>
      <h4> <%= link_to article.title, article %> </h4> 
      <% if article.date.present? %>
        <p> <i> <%= article.date %> </i> </p
      <% end %>

      <% if article.author.present? %>
        <p> By <%= article.author %> </p>
      <% end %>
    </li>
  <% end %>
</ul>
