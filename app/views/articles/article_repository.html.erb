<h1>My Articles</h1>

<% if @user_articles.any? %>
  <div id="articles">
    <% @user_articles.each do |article| %>
      <p>
        <strong>Title:</strong>
        <%= article.title %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= article.content %>
      </p>
      
      <p>
        <%= link_to "Show this article", article %>
      </p>
    <% end %>
  </div>
<% else %>
  <p>Article repository is empty. No previous articles written.</p>
<% end %>
