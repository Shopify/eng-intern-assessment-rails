<!-- app/views/articles/edit.html.erb -->
<div class="article-form-container">
  <h1>Edit Article</h1>

  <%= form_with(model: @article, url: article_path(@article), method: :patch, class: 'article-form') do |form| %>

    <div class="form-group">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :content, class: 'form-label' %>
      <%= form.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :author, class: 'form-label' %>
      <%= form.text_field :author, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Update Article', class: 'btn btn-primary' %>
      <%= link_to 'Back', articles_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
