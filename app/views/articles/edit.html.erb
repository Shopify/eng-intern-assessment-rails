<%= form_for @article do |f| %>
    <!-- Existing article fields with added style -->
    <div class="field" style="margin-bottom: 10px;">
      <%= f.label :title %><br>
      <%= f.text_field :title, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>
    <div class="field" style="margin-bottom: 10px;">
      <%= f.label :content %><br>
      <%= f.text_area :content, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>
  
    <!-- Field for editing writer name with added style -->
    <div class="field" style="margin-bottom: 10px;">
      <%= f.label :writer_name, "Author" %><br>
      <%= f.text_field :writer_name, value: @article.writer.name, style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    </div>
  
    <div class="actions">
      <%= f.submit 'Update', style: "background-color: green; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
<% end %>
