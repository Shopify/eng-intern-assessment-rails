<h1>Edit Article</h1>

<%= form_for @article do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :content %>
        <%= f.text_area :content %>
    </div>

    <div>
        <%= f.label :author %>
        <%= f.text_field :author %>
    </div>

    <div>
        <%= f.label :date %>
        <%= f.date_field :date %>
    </div>

    <div>
        <%= button_to 'Update article', @article, method: :update %></td>
    </div>
<% end %>
