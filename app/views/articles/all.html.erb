<!-- app/views/articles/all.html.erb -->

<div class="flex flex-col mt-10">
  <div id="articles" class="w-full">
    <% # Loop through each article in the @articles collection %>
    <% @articles.each do |article| %>
      <div class="mb-6"> <!-- Added margin-bottom to create space between cards -->
        <!-- # Render a card with title and subtitle (author) using a partial -->
        <%= render_card title: article.title,
                        subtitle: "Author: #{article.author}" do %>
          <div class="p-6 pt-0">
            <p class="text-gray-500 text-sm mb-2">Published on: <%= article.date.strftime('%B %e, %Y') %></p>
          </div>
          <div class="items-center p-6 pt-0 flex justify-between">
            <!-- Link to the individual article with a button style -->
                <%= link_to "Show this article", article, class: "inline-flex items-center justify-center rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
