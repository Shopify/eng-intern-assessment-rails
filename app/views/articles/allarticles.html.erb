<h1>Encyclopedia</h1>

<%= render "searchform" %>

<div class="div-all-articles">
  <h2>Your Articles</h2>  
  <div class="flex-container">
    <% if @articles.empty? %>
      <h3>Nothing available!</h3>
    <% else %>
      <% @articles.each do |article| %>
        <%= link_to article.title, article_path(article), class:"flex-item" %>
      <% end %>
    <% end %>
  </div>
</div>

<%= render "backhomebtn" %>
