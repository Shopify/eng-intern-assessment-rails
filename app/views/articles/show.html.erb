<h1><%= @article.title %></h1>

<p><%= @article.content %></p>

<% if @article.author.present? && @article.date.present? %>
  <p>by <%= @article.author %> on <%= @article.date.strftime("%B %d, %Y") %></p>
<% elsif @article.date.present? %>
  <p>on <%= @article.date.strftime("%B %d, %Y") %></p>
<% elsif @article.author.present? %>
  <p>by <%= @article.author %></p>
<% end %>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
  <li><%= link_to "Go Back to Home Page", articles_path(@article) %></li>
</ul>