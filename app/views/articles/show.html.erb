<!-- app/views/articles/show.html.erb -->
<h1><%= @article.title %></h1>

<p><%= @article.content %></p>

<p>
  <strong>Author:</strong>
  <%= @article.author %>
</p>

<p>
  <strong>Date:</strong>
  <%= @article.date %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %> |
<%= button_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %>