<% content_for :centered_content do %>
    <%= render 'layouts/notice' %>

    <div>
        <h1>Title: <%= @article.title %></h1>
        <p><strong>Author:</strong> <%= @article.author %></p>
        <p><strong>Published At:</strong> <%= @article.date %></p>
        <div>
            <%= @article.content %>
        </div>
    </div>

    <div>
        <%= link_to "Edit this article", edit_article_path(@article) %> |
        <%= link_to "Back to all articles", articles_path %>
        <%= button_to "Delete this article", @article, method: :delete %>
    </div>
<% end %>

<%= render 'layouts/centered_content', content: content_for(:centered_content) %>