<h1><%= @article.title %></h1>
<p>Author: <%= @article.author %></p>

<p><%= @article.content %></p>
<p>Date: <%= @article.date %></p>

<ul>
    <li><%= link_to "Update", edit_article_path(@article) %></li>
    <li><%= link_to "Destroy", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
        } %></li>
</ul>

<%= link_to "All Articles", root_path %>