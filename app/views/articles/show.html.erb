<div>
    <h1><%= @article.title %></h1>
    <p><em>By:</em> <%= @article.author %></p>
    <p><em>Date:</em> <%= @article.date %></p>
    <div class="content">
        <p><%= @article.content %></p>
    </div>
</div>

<div>
    <%= link_to "Back", articles_path(@article), :class => 'btn btn-primary'%>
    <%= link_to "Edit", edit_article_path(@article), :class => 'btn btn-primary'%>
    <%= link_to "Delete", article_path(@article),  data: { turbo_method: :delete, confirm: 'Are you certain you want to delete this article?'}, :class => 'btn btn-danger'%>
</div>