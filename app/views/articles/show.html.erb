<div class="container">
  <h1 class="my-4"><%= @article.title %></h1>

  <div class="card">
    <div class="card-body">
      <p><strong>Author:</strong> <%= @article.author %></p>
      <p><%= @article.content %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %>
    <%= link_to 'Back', articles_path, class: 'btn btn-secondary' %>
  </div>
</div>

