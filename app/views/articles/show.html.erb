<div class="article">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <p><span style="font-weight: bold">Author</span>: <%= @article.author %></p>
  <p><span style="font-weight: bold">Date</span>: <%= @article.date %></p>
  <button class="edit-article">
    <%= link_to 'Edit', edit_article_path(@article) %>
  </button>
  <button >
    <%= link_to 'Back', articles_path %>
  </button>
</div>
