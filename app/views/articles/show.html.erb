<h1><%= @article.title %></h1>
<p><%= @article.author %></p>
<p><%= @article.date %></p>

<p><%= @article.content %></p>

<ul>
  <li><%= link_to "Back", root_path %></li>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Delete", article_path(@article), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure you want to delete this article?"
  } %></li>
</ul>
