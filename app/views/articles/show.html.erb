<!-- Renders article title, author, publish date at top -->
<h1><%= @article.title %></h1>
<p>
  <strong>Author:</strong> <%= @article.author %><br>
  <strong>Published on:</strong> <%= @article.date.strftime("%B %d, %Y") %>
</p>

<!-- creates separation between main content and info in title -->
<hr>

<!-- Renders article content -->
<p><%= @article.content %></p>

<!-- Links to edit and go back to root -->
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Delete', article_path(@article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %> |
<%= link_to 'Back to Articles', articles_path %>
