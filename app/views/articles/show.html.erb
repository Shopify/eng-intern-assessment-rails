<%= render 'search' %>

<h1><%= @article.title %></h1>

<p><%= @article.content %></p>

<% unless @article.author.blank? %>
  <p>Author: <%= @article.author %></p>
<% end %>

<% unless @article.date.blank? %>
  <p>Published on: <%= @article.date %></p>
<% end %>

<div class="button-group">
    <%= link_to "Back to Articles", articles_path, class: 'button' %>
    <%= link_to 'Edit', edit_article_path(@article), class: 'button' %>
    <%= button_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button' %>
</div>