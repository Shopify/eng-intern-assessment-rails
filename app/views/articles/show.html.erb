<h1><%= @article.title %></h1>
<h2>By <%= @article.author %></h1>
<h3><%= @article.date %></h1>
<p><%= @article.content %></p>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Delete", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
