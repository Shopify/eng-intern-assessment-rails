<div class="navbar">
    <%= render 'layouts/navbar' %>
</div>

<div class="show-container">
  <h1 class="show-title"><%= @article.title %></h1>

  <div class="show-details">
    <% if @article.author.present? %>
      <p>Author: <%= @article.author %></p>
    <% end %>

    <% if @article.date.present? %>
      <p>Date: <%= @article.date.strftime("%d/%m/%Y") %></p>
    <% end %>
  </div>

  <div class="show-content">
    <%= @article.content %>
  </div>

  <div class="article-actions">
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-edit" %>
    <%= form_with(url: article_path(@article), method: :delete) do %>
        <%= submit_tag "Delete", data: { confirm: "Are you sure you want to delete this article?" }, class: "btn btn-delete" %>
      <% end %>
      
  </div>
</div>
