<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1><%= @article.title %></h1>

      <p><strong>Author:</strong> <%= @article.author %></p>
      <p><strong>Date:</strong> <%= @article.date %></p>

      <div>
        <%= @article.content %>
      </div>

      <div class="mt-3">
        <%= link_to 'Back to Articles', articles_path, class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-secondary ml-2' %>
      </div>

      <%= form_with model: @article, local: true, method: :delete do |form| %>
        <%= link_to 'Delete', '#', class: 'btn btn-danger mt-3', id: 'delete-article-link' %>
        <%= form.submit 'Confirm Delete', style: 'display: none;' %>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.getElementById('delete-article-link').addEventListener('click', function(e) {
    e.preventDefault();
    const deleteConfirmation = confirm('Are you sure you want to delete this article?');
    if (deleteConfirmation) {
      this.nextElementSibling.click();
    }
  });
</script>
