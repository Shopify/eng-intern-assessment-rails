<h1><%= @article.title %></h1>
<p><%= @article.author %></p>
<p><%= @article.date %></p>
<p><%= @article.content %></p>

<%= link_to "Edit", edit_article_path(@article), :class => 'btn btn-primary'%>
<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: 'Are you certain you want to delete this article?'}, :class => 'btn btn-danger'%>