<!--The view for showing encyclopedia articles-->
<h1><%= @article.title %></h1>
<p><%= @article.content %></p>
<span>By: <%= @article.author %></span>
<span>Created At: <%= @article.date %></span>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Delete", article_path(@article), data: {
    turbo_method: :delete,
    turbo_confirm: "Confirm Deletion?"
  } %></li>
</ul>
