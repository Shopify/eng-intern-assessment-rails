<h1><%= @article.title %></h1>
<div class="div-show-article">
    <p><%= @article.content %></p>
</div>

<div class="div-edit-delete-btn">
  <button style="color:white" class="btn-index-page"><%= link_to "Edit", edit_article_path(@article) %></button>
  <button class="btn-index-page">
    <%= link_to "Destroy", article_path(@article), data: {
        turbo_method: :DELETE,
        turbo_confirm: "Are you sure you want to delete this article?"
    } %>
    </button>
</div>


<%= render "backbtn" %>
