<div class="container mt-4">

  <div class="card">
    <div class="card-body">
      <h5 class="card-title mb-4">Title: <%= @article.title %></h5>
      <h6 class="card-subtitle mb-4 text-muted">Author: <%= @article.author %></h6>
      <p class="card-text mb-4"><%= @article.content %></p>
      <p class="card-text"><strong>Date Added:</strong> <%= @article.date %></p>

      <div class="mt-4 d-flex justify-content-between align-items-center">
        <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-primary' %>
        <%= link_to "Back to articles", articles_path, class: 'btn btn-secondary' %>
        <%= button_to "Destroy", @article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
