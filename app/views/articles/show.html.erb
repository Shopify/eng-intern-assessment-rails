<!-- app/views/articles/show.html.erb -->

<article class="article-show">
  <h1><%= @article.title %></h1>

  <p><strong>Author:</strong> <%= @article.author %></p>
  <p><strong>Date:</strong> <%= @article.date.strftime("%Y-%m-%d") %></p>

  <%= button_to "Clap", clap_path(@article), method: "put", class: "clap-button" %>
  <span id="claps-count"><%= @article.claps %></span>

  <div class="article-content">
    <%= simple_format(@article.content) %>
  </div>

  <div class="article-actions">
    <%= link_to "Edit", edit_article_path(@article), class: "edit-link blue-text" %>
    <br />
    <%= link_to "Back to Articles", articles_path, class: "back-link blue-text" %>
    <br />
    <%= link_to "Destroy", article_path(@article), 
            data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            }, 
            class: "destroy-link red-text" %>
  </div>
</article>

