<div class="flex flex-col gap-10 justify-center items-center mt-20">
  <h1 class="text-4xl font-thin text-lime-700">Search For Articles</h1>
  <div class="flex gap-3 w-full justify-center">
    <%= form_tag search_articles_path, method: :get, class: "flex gap-3 w-full justify-center" do %>
      <%= text_field_tag :query, params[:query], placeholder: "Start searching", class: "input input-bordered w-full max-w-xl" %>
      <%= submit_tag "Search", class: "btn bg-lime-600 text-white font-light hover:bg-lime-800" %>
    <% end %>
  </div>
  <div>
    <% if @articles.present? %>
      <ul class="w-full mt-4">
        <div class="">
          <% @articles.each do |article| %>
            <div class="w-96 mb-9">
              <div class="outline outline-offset-1 outline-slate-100 flex flex-col bg-white rounded-md shadow pt-5 px-5">
                <div class="">
                  <div class="flex gap-1 font-bold">
                    <li class="card-title text-2xl"><%= article.title %></li>
                  </div>
                  <li class="mt-3 font-extralight flex gap-1">by 
                    <p class="text-lime-600"><%= article.author %></p>
                  </li>
                  <li class="font-light text-xs italic pt-2">Authored <%= article.date %></li>
                  <div class="mt-5 pb-5">
                    <%= link_to article do %>
                      <button class="btn btn-outline btn-sm btn-neutral w-full">View Article</button>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </ul>
    <% elsif defined?(@articles) %>
      <div class="no-results mt-10">
        <p>No articles found.</p>
      </div>
    <% end %>
  </div>
</div>
