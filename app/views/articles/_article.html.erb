<div id="<%= dom_id article %>" class="my-4 divide-y divide-gray-200 overflow-hidden rounded-lg bg-white shadow">
  <div class="font-semibold text-lg px-4 py-3 sm:px-6">
    <%= link_to article_path(article), class: "text-slate-700 hover:text-slate-900 font-semibold" do %>
      <%= article.title %>
    <% end %>
  </div>
  <div class="px-4 py-3 sm:p-6">
    <%= current_page?(articles_path) || current_page?(root_path) ? truncate(article.content, length: 300, separator: " ") : simple_format(article.content) %>
  </div>
  <div class="px-4 py-3 sm:px-6">
    <div class="md:flex md:items-center md:justify-between">
      <div class="min-w-0 flex-1">
        <% if article.author.present? %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="-mt-1 w-6 h-6 inline text-emerald-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
          </svg>    
          <%= article.author %>
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="-mt-1 w-6 h-6 inline text-rose-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m0-10.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.75c0 5.592 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.57-.598-3.75h-.152c-3.196 0-6.1-1.25-8.25-3.286Zm0 13.036h.008v.008H12v-.008Z" />
          </svg>                
          Anonymous
        <% end %>
      </div>
      <div class="flex md:ml-4 md:mt-0 italic">
        <%= article.date.present? ? "Posted on #{article.date.strftime("%B %d, %Y")}" : "-" %>
      </div>
    </div>
  </div>
</div>

