<div class="border-2 rounded shadow-lg p-4 hover:shadow-xl transition-shadow duration-300 ease-in-out">
  <%= link_to article.title, article_path(article), class: "text-2xl font-bold text-blue-600 hover:text-blue-800 transition duration-300 ease-in-out" %>
  <p class="text-gray-700 mt-1"><%= truncate(article.content, length: 200) %></p>
  <div class="text-gray-600 text-sm">
    <%= '1 min read' %>
  </div>
</div>
