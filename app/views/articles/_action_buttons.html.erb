<div class="container">
  <div class="row fixed-bottom mb-3">
    <div class="col d-flex justify-content-start">
      <%# Provide a default value for show_edit_button %>
      <% show_edit_button = local_assigns[:show_edit_button].nil? ? true : local_assigns[:show_edit_button] %>
      <% if show_edit_button %>
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary me-2" %>
      <% end %>
      <%= link_to 'Back', articles_path, class: "btn btn-secondary" %>
    </div>
    <div class="col d-flex justify-content-end">
      <%= button_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </div>
  </div>
</div>