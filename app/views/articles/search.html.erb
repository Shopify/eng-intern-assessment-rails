<h1>Search Articles</h1>

# search bar
<%= form_with url: search_articles_path, method: :get do |form| %>
    <%= form.text_field :search_term %>
    <%= form.submit "Search" %>
<% end %>

# display search result
<ul>
  <% @articles.each do |article| %>
    <li>
    <%= link_to article.title, article%>
        <div>
            <%= article.content %>
        </div>
    </li>
  <% end %>
</ul>
  