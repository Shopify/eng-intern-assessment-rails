<div style="    display: flex;
  /*overflow-y: scroll;*/
  flex-direction: column;
  justify-content: center;
  align-items: center;
">
<%= form_with(model: @article, url: articles_path, local: true) do |form| %>
  <h1>Create New Article</h1>

  <% if @article.errors.any? %>
 <div style="color: red" id="error_explanation">
    <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
    <ul>
      <% @article.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="form-container">
  
    <div class="field">
      <%= form.label :title, class:"form-label"%>
      <%= form.text_field :title, class: "form-input" %>
    </div>

     <div class="field">
      <%= form.label :author, class: "form-label" %>
      <%= form.text_field :author, class: "form-input" %>
    </div>

    <div class="field">
      <%= form.label :content, class: "form-label" %>
      <%= form.text_area :content, class: "form-textarea", rows: 8%>
    </div>

    <div class="field">
      <%= form.label :date, class: "form-label" %>
      <%= form.date_field :date%>
    </div>

    <div class="actions">
      <%= form.submit 'Create Article',style: "padding: 5px 10px; text-decoration: none; background-color: #28a745; color: white; border-radius: 5px;" %>
    </div>
    </div>
  <% end %>

  <p style="margin-top: 20px;">
    <%= link_to 'Back to Articles', articles_path, style: 'padding: 10px 15px; text-decoration: none; background-color: #6c757d; color: white; border-radius: 5px;' %>
  </p>
</div>