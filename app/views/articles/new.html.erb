<div class="flex flex-col bg-slate-600">
  <h1 class="text-xl font-bold">New Article</h1>

  <%= form_with model: @article do |form| %>
    <div>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :author %><br>
      <%= form.text_field :author %>
      <% @article.errors.full_messages_for(:author).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.label :content %><br>
      <%= form.text_area :content %><br>
      <% @article.errors.full_messages_for(:content).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>
    <div class="bg-blue-500 hover:bg-blue-600 w-auto p-2 mt-2 text-white text-center">
      <%= form.submit %>
    </div>
  <% end %>
  <div class="w-full mt-4">
        <%= link_to "Back to home page", articles_path, class: "bg-gray-200 hover:bg-gray-300 rounded-md p-2 text-center" %>
  </div>
</div>
