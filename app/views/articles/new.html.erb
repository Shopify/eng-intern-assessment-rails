<h1>New Article</h1>

<!-- Form for creating a new article -->
<%= form_with model: @article, local: true do |form| %>

  <!-- Display validation errors, if any, when the article submission fails -->
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <!-- List each error message -->
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Article title input field -->
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :article_title %>
  </div>

  <!-- Article content input field -->
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :article_content %>
  </div>

  <!-- Article author input field -->
  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :article_author %>
  </div>

  <!-- Article date input field -->
  <div class="field">
    <%= form.label :date %>
    <%= form.date_select :date, id: :article_date %>
  </div>

  <!-- Submit button for the form -->
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
