<div class="article-form">
  <h1>Create a New Encyclopedia Article:</h1>

  <% if @article.errors.any? %>
    <div id="error_explanation" class="error-message">
      <h2>Please fix the errors below and try creating your article again:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Form Start -->
  <%= form_with(model: @article, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: 'title', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, id: 'content', class: 'form-control', rows: 6 %>
    </div>

    <div class="form-group">
      <%= form.label :author %>
      <%= form.text_field :author, id: 'author', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :date %>
      <%= form.date_field :date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "Create Article", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
