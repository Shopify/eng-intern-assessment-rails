<div>
  <h1>Articles</h1>
  <%= form_tag("/article/search", method: :get) do %>
    <%= text_field_tag(:search, params[:search], placeholder: "Search articles") %>
    <%= submit_tag("Search") %>
  <% end %>
  

  <%= button_to "Create New Article", "/article/new", method: :get %>
  <% @articles.each do |article| %>
    <div>
      <h2>
        <a><%= link_to article.title, "/article/#{article.id}" %></a>
      </h2>
      <h4>written by <%= article.author == "" ? "Anonymous" : article.author %> 
      on <%= article.date.strftime('%Y-%m-%d')%> </h4>
      <p><%= article.content %></p>
    </div>
  <% end %>
